<Window x:Class="INFO_5101_Project1.CitiesInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INFO_5101_Project1"
        mc:Ignorable="d"
        Title="CitiesInfo" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background1.png"/>
        </Grid.Background>
        <!--<ComboBox HorizontalAlignment="Left" Margin="93,232,0,0" VerticalAlignment="Top" Width="219" Height="33">
            <ComboBoxItem>City</ComboBoxItem>
            <ComboBoxItem IsSelected="True">City 2</ComboBoxItem>
            <ComboBoxItem>City 3</ComboBoxItem>
        </ComboBox>-->
        <TextBox x:Name="cityInputTextBox" HorizontalAlignment="Left" Margin="93,232,0,0" VerticalAlignment="Top" Width="219" Height="33" />
        <Button x:Name="CitiesInfoLocateButton" Content="Locate on the Map" HorizontalAlignment="Left" Margin="93,277,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.77,2.382" Width="183" Height="49" FontSize="20" Foreground="#FFFDFBFB" BorderThickness="4,4,4,4" BorderBrush="#FFFBF8F8" Background="#FF051D67" Click="CitiesInfoLocateButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="CitiesInfoSearchButton" Content="Search Info" HorizontalAlignment="Left" Margin="93,330,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.77,2.382" Width="183" Height="49" FontSize="20" Foreground="#FFFDFBFB" BorderThickness="4,4,4,4" BorderBrush="#FFFBF8F8" Background="#FF051D67" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="CitiesInfoLongtitudeField" HorizontalAlignment="Left" Margin="512,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Height="33" RenderTransformOrigin="0.454,-0.847" IsReadOnly="True"/>
        <Label Content="Longitude:" HorizontalAlignment="Left" Margin="361,208,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6"/>
        <Label Content="City:" HorizontalAlignment="Left" Margin="93,186,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="361,132,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6" Height="33"/>
        <TextBox x:Name="CitiesInfoNameField" HorizontalAlignment="Left" Margin="512,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="33" RenderTransformOrigin="0.454,-0.847" IsReadOnly="True"/>
        <Label Content="Latitude:" HorizontalAlignment="Left" Margin="361,170,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6"/>
        <TextBox x:Name="CitiesInfoLatitudeField" HorizontalAlignment="Left" Margin="512,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="33" RenderTransformOrigin="0.454,-0.847" IsReadOnly="True"/>
        <Label Content="Country:" HorizontalAlignment="Left" Margin="361,246,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6"/>
        <Label Content="Province:" HorizontalAlignment="Left" Margin="361,286,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6"/>
        <Label Content="Population:" HorizontalAlignment="Left" Margin="361,324,0,0" VerticalAlignment="Top" Width="136" Foreground="#FF05165D" FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.538,0.738" Background="#FF1BD2D6"/>
        <TextBox x:Name="CitiesInfoPopulationField" HorizontalAlignment="Left" Margin="513,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Height="32" RenderTransformOrigin="0.454,-0.847" IsReadOnly="True" IsUndoEnabled="False"/>
        <TextBox x:Name="CitiesInfoProvinceField" HorizontalAlignment="Left" Margin="513,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Height="33" RenderTransformOrigin="0.454,-0.847" IsReadOnly="True"/>
        <TextBox x:Name="CitiesInfoCountryField" HorizontalAlignment="Left" Margin="513,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Height="33" RenderTransformOrigin="0.454,-0.847" IsReadOnly="True"/>
    </Grid>
</Window>
